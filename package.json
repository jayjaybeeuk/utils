{
  "name": "@jayjaybeeuk/utils",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "install::static": "lerna exec npm install",
    "package-script": "lerna run --scope",
    "publish": "utils/scripts/publish.sh",
    "publish::packages": "lerna publish --yes",
    "publish::bump": "lerna publish --force-publish --canary --yes",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx packages",
    "lint::fix": "eslint --ext .js,.jsx,.ts,.tsx packages --fixAll",
    "commit": "lerna exec --concurrency 1 --stream 'npm run commit'",
    "release": "standard-version -a --no-verify && lerna exec --concurrency 1 --stream 'npm publish'",
    "prepare": "husky install",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && lerna version --conventional-commits --no-git-tag-version --no-push"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lerna": "^7.0.0",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
